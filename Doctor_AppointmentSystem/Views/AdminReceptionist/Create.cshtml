@model Doctor_AppointmentSystem.ViewModels.ReceptionistCreateViewModel

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewData["Title"] = "Add Receptionist";
}

<div class="card">
    <div class="card-title-row">
        <div>
            <h3>Add New Receptionist</h3>
            <div class="card-title-sub">
                Create a new receptionist account with login access and front-desk profile.
            </div>
        </div>

        <a asp-action="Index" class="btn-secondary-main">
            ← Back to Receptionist List
        </a>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="validation-summary">
            @Html.ValidationSummary(false, "", new { @class = "field-validation" })
        </div>

        <div class="form-grid">
            <!-- LEFT: Basic information -->
            <div>
                <div class="form-section-title">Basic Information</div>

                <div class="form-field">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-input" />
                    <span asp-validation-for="FirstName" class="field-validation"></span>
                </div>

                <div class="form-field">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-input" />
                    <span asp-validation-for="LastName" class="field-validation"></span>
                </div>

                <div class="form-field">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-input" />
                    <span asp-validation-for="Email" class="field-validation"></span>
                </div>

                <div class="form-field">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-input" />
                    <span asp-validation-for="PhoneNumber" class="field-validation"></span>
                </div>

                <div class="form-field">
                    <label asp-for="Gender" class="form-label"></label>
                    <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Doctor_AppointmentSystem.Enums.Gender>()" class="form-input">
                    </select>
                    <span asp-validation-for="Gender" class="field-validation"></span>
                </div>

                <div class="form-field">
                    <label asp-for="DateOfBirth" class="form-label"></label>
                    <input asp-for="DateOfBirth" class="form-input" type="date" />
                    <span asp-validation-for="DateOfBirth" class="field-validation"></span>
                </div>

                <div class="form-field password-wrapper">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-input password-input" id="password" />
                    <button type="button" class="password-toggle" data-target="password">👁</button>
                    <span asp-validation-for="Password" class="field-validation"></span>
                </div>

                <div class="form-field password-wrapper">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-input password-input" id="confirmPassword" />
                    <button type="button" class="password-toggle" data-target="confirmPassword">👁</button>
                    <span asp-validation-for="ConfirmPassword" class="field-validation"></span>
                </div>
            </div>

            <!-- RIGHT: Work details -->
            <div>
                <div class="form-section-title">Work Details &amp; Profile</div>

                <div class="form-field">
                    <label asp-for="OfficePhone" class="form-label"></label>
                    <input asp-for="OfficePhone" class="form-input" />
                    <span asp-validation-for="OfficePhone" class="field-validation"></span>
                    <div class="form-help-text">
                        Direct office phone number (optional).
                    </div>
                </div>

                <div class="form-field">
                    <label asp-for="CounterNumber" class="form-label"></label>
                    <input asp-for="CounterNumber" class="form-input" />
                    <span asp-validation-for="CounterNumber" class="field-validation"></span>
                    <div class="form-help-text">
                        For example: OPD-1, OPD-2, Billing, etc.
                    </div>
                </div>

                <div class="form-field">
                    <label asp-for="ProfileImage" class="form-label">Profile Photo</label>
                    <input asp-for="ProfileImage" type="file" class="form-input-file" />
                    <span asp-validation-for="ProfileImage" class="field-validation"></span>
                    <div class="form-help-text">
                        JPG/PNG, up to ~2MB. Will be shown on lists and profile.
                    </div>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-primary-main">Save Receptionist</button>
            <a asp-action="Index" class="btn-secondary-main">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // simple password show/hide reusing existing CSS
        document.querySelectorAll('.password-toggle').forEach(btn => {
            btn.addEventListener('click', () => {
                const targetId = btn.getAttribute('data-target');
                const input = document.getElementById(targetId);
                if (!input) return;
                const isPwd = input.type === 'password';
                input.type = isPwd ? 'text' : 'password';
                btn.classList.toggle('password-toggle--active', isPwd);
            });
        });
    </script>
}
