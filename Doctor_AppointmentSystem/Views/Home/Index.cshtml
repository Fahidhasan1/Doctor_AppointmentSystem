<!-- ========= SIGN IN MODAL ========= -->
<div class="auth-modal-overlay" id="signinModal" aria-hidden="true">
    <div class="auth-modal-dialog" role="dialog" aria-modal="true" aria-labelledby="signinTitle">
        <button class="auth-close-btn" type="button" data-close-modal>
            <i class="fa-solid fa-xmark"></i>
        </button>

        <h2 class="auth-title" id="signinTitle">Welcome Back</h2>
        <p class="auth-subtitle">Sign in to manage your doctor appointments.</p>

        <form method="post" action="/Account/Login">
            @Html.AntiForgeryToken()

            <div class="auth-form-col" style="margin-bottom:14px;">
                <label class="auth-label" for="signinIdentifier">Email address</label>
                <input id="signinIdentifier"
                       type="email"
                       name="Email"
                       class="auth-input"
                       placeholder="Enter email"
                       autocomplete="email"
                       required />
            </div>

            <div class="auth-form-col">
                <label class="auth-label" for="signinPassword">Password</label>
                <div class="auth-input-wrap">
                    <input id="signinPassword"
                           type="password"
                           name="Password"
                           class="auth-input"
                           placeholder="Enter password"
                           autocomplete="current-password"
                           required />
                    <button class="auth-password-toggle" type="button">
                        <i class="fa-regular fa-eye"></i>
                    </button>
                </div>
            </div>

            <div class="auth-inline">
                <label class="auth-checkbox-wrap">
                    <input type="checkbox" class="auth-checkbox" name="RememberMe" />
                    <span>Remember me</span>
                </label>

                <a href="#" class="auth-link">Forgot password?</a>
            </div>

            <button type="submit" class="auth-primary-btn">Sign In</button>

            <p class="auth-footer-text">
                Don’t have an account?
                <button type="button" class="auth-link" data-switch-to="signup">Sign Up</button>
            </p>
        </form>
    </div>
</div>

<!-- ========= SIGN UP MODAL ========= -->
<div class="auth-modal-overlay" id="signupModal" aria-hidden="true">
    <div class="auth-modal-dialog auth-modal-dialog-wide" role="dialog" aria-modal="true" aria-labelledby="signupTitle">
        <button class="auth-close-btn" type="button" data-close-modal>
            <i class="fa-solid fa-xmark"></i>
        </button>

        <h2 class="auth-title" id="signupTitle">Create Account</h2>
        <p class="auth-subtitle">Register to book and manage your doctor appointments.</p>

        <form method="post" action="/Account/Register">
            @Html.AntiForgeryToken()

            <div class="auth-form-row">
                <div class="auth-form-col">
                    <label class="auth-label" for="signupFirstName">First name</label>
                    <input id="signupFirstName"
                           type="text"
                           name="FirstName"
                           class="auth-input"
                           placeholder="Enter first name"
                           required />
                </div>
                <div class="auth-form-col">
                    <label class="auth-label" for="signupLastName">Last name</label>
                    <input id="signupLastName"
                           type="text"
                           name="LastName"
                           class="auth-input"
                           placeholder="Enter last name"
                           required />
                </div>
            </div>

            <div class="auth-form-row">
                <div class="auth-form-col">
                    <label class="auth-label" for="signupEmail">Email address</label>
                    <input id="signupEmail"
                           type="email"
                           name="Email"
                           class="auth-input"
                           placeholder="example@domain.com"
                           autocomplete="email"
                           required />
                    <div class="auth-helper">Use a valid email. It will be used for login and notifications.</div>
                </div>
                <div class="auth-form-col">
                    <label class="auth-label" for="signupPhone">Mobile number</label>
                    <input id="signupPhone"
                           type="tel"
                           name="PhoneNumber"
                           class="auth-input"
                           placeholder="e.g. 01XXXXXXXXX"
                           required />
                </div>
            </div>

            <div class="auth-form-row">
                <div class="auth-form-col">
                    <label class="auth-label" for="signupDob">Date of birth (dd/mm/yyyy)</label>
                    <input id="signupDob"
                           type="date"
                           name="DateOfBirth"
                           class="auth-input"
                           required />
                </div>
                <div class="auth-form-col">
                    <label class="auth-label" for="signupGender">Gender</label>
                    <select id="signupGender"
                            name="Gender"
                            class="auth-select"
                            required>
                        <option value="">Select gender</option>
                        <option value="female">Female</option>
                        <option value="male">Male</option>
                        <option value="other">Other</option>
                        <option value="prefer_not_say">Prefer not to say</option>
                    </select>
                </div>
            </div>

            <div class="auth-form-row">
                <div class="auth-form-col">
                    <label class="auth-label" for="signupPassword">Password</label>
                    <div class="auth-input-wrap">
                        <input id="signupPassword"
                               type="password"
                               name="Password"
                               class="auth-input"
                               placeholder="Enter password"
                               autocomplete="new-password"
                               required />
                        <button class="auth-password-toggle" type="button">
                            <i class="fa-regular fa-eye"></i>
                        </button>
                    </div>
                </div>
                <div class="auth-form-col">
                    <label class="auth-label" for="signupConfirmPassword">Confirm password</label>
                    <div class="auth-input-wrap">
                        <input id="signupConfirmPassword"
                               type="password"
                               name="ConfirmPassword"
                               class="auth-input"
                               placeholder="Confirm password"
                               autocomplete="new-password"
                               required />
                        <button class="auth-password-toggle" type="button">
                            <i class="fa-regular fa-eye"></i>
                        </button>
                    </div>
                </div>
            </div>

            <div class="auth-inline" style="margin-top:10px;">
                <label class="auth-checkbox-wrap">
                    <input type="checkbox" class="auth-checkbox" id="signupTerms" />
                    <span>I agree to the terms &amp; conditions and privacy policy.</span>
                </label>
            </div>

            <button type="submit" class="auth-primary-btn">Sign Up</button>

            <p class="auth-footer-text">
                Already have an account?
                <button type="button" class="auth-link" data-switch-to="signin">Sign In</button>
            </p>
        </form>
    </div>
</div>

