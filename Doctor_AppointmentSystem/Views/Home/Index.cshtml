@{
    ViewData["Title"] = "Home";
}

@if (TempData["LoginError"] is string inactiveMsg && !string.IsNullOrWhiteSpace(inactiveMsg))
{
    <div class="alert alert-danger" role="alert" style="margin-bottom: 16px;">
        @inactiveMsg
    </div>
}

<div class="page-wrapper">

    <!-- Sticky Header -->
    <div class="header-bar">
        <div class="container-main">
            <header class="header-main">
                <div class="logo-wrapper">
                    <div class="logo-mark"></div>
                    <div class="logo-text-main">DOCTOR APPOINTMENT SYSTEM</div>
                </div>

                <nav class="navbar-links">
                    <a href="#home" class="nav-link nav-active">Home</a>
                    <a href="#about" class="nav-link">About Us</a>
                    <a href="#contact" class="nav-link">Contact</a>
                    <a href="#doctors" class="nav-link">Doctors</a>
                    <!-- Sign In as white box button -->
                    <a href="#signin" class="nav-link nav-auth-link nav-signin-btn">Sign In</a>
                    <!-- Sign Up button -->
                    <button class="nav-link nav-auth-link nav-signup" type="button" data-open="signupModal">
                        Sign Up
                    </button>
                </nav>
            </header>
        </div>
    </div>

    <!-- Hero -->
