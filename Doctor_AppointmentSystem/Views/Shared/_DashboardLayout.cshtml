@{
    Layout = null;
    var title = ViewData["Title"] ?? "Dashboard";
    string userName = User.Identity?.Name ?? "User";
    // Simple initials for avatar: take first letter of name/email
    var initial = !string.IsNullOrEmpty(userName) ? userName.Substring(0, 1).ToUpper() : "U";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@title - Doctor Appointment System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body class="dashboard-body">
    <div class="dashboard-wrapper">
        <!-- SIDEBAR -->
        <aside class="dashboard-sidebar">
            <div class="dashboard-logo">
                <div class="dashboard-logo-mark"></div>
                <div class="dashboard-logo-text">
                    DAS Dashboard
                </div>
            </div>

            <div class="dashboard-sidebar-menu">
                @* 🔹 Role-based sidebars: we will create these partials next *@
                @if (User.IsInRole("Admin"))
                {
                    @await Html.PartialAsync("_AdminSidebar")
                }
                else if (User.IsInRole("Doctor"))
                {
                    @await Html.PartialAsync("_DoctorSidebar")
                }
                else if (User.IsInRole("Receptionist"))
                {
                    @await Html.PartialAsync("_ReceptionistSidebar")
                }
                else
                {
                    @* default: Patient *@
                    @await Html.PartialAsync("_PatientSidebar")
                }
            </div>

            <div class="dashboard-sidebar-footer">
                Logged in as @userName
            </div>
        </aside>

        <!-- MAIN AREA -->
        <div class="dashboard-main">
            <!-- TOP BAR -->
            <header class="dashboard-topbar">
                <div class="dashboard-topbar-left">
                    <div class="dashboard-topbar-title">
                        @RenderSection("PageTitle", required: false)
                    </div>
                    <div class="dashboard-topbar-subtitle">
                        @RenderSection("PageSubtitle", required: false)
                    </div>
                </div>

                <div class="dashboard-topbar-right">
                    <div class="dashboard-user-info">
                        <div class="dashboard-user-avatar">@initial</div>
                        <div>
                            <div style="font-weight:600;">@userName</div>
                            <div style="font-size:11px; color:#7a83a8;">
                                @if (User.IsInRole("Admin"))
                                {
                                    @:Admin
                                }
                                else if (User.IsInRole("Doctor"))
                                {
                                    @:Doctor
                                }
                                else if (User.IsInRole("Receptionist"))
                                {
                                    @:Receptionist
                                }
                                else if (User.IsInRole("Patient"))
                                {
                                    @:Patient
                                }
                                else
                                {
                                    @:User
                                }
                            </div>
                        </div>
                    </div>

                    <form asp-controller="Account" asp-action="Logout" method="post" class="dashboard-logout-form">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="dashboard-logout-button">
                            <i class="fa-solid fa-right-from-bracket"></i> Logout
                        </button>
                    </form>
                </div>
            </header>

            <!-- PAGE CONTENT -->
            <main class="dashboard-content">
                @RenderBody()
            </main>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
