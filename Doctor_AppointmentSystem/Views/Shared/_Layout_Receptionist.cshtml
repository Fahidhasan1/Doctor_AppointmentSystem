@using Doctor_AppointmentSystem.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    Layout = null;

    var currentUser = await UserManager.GetUserAsync(User);

    var fullName = ((currentUser?.FirstName ?? "") + " " + (currentUser?.LastName ?? ""))
                   .Trim();

    var userName = !string.IsNullOrWhiteSpace(fullName)
        ? fullName
        : (currentUser?.UserName ?? "Receptionist");

    var firstLetter = string.IsNullOrWhiteSpace(userName)
        ? "R"
        : userName.Trim()[0].ToString().ToUpper();

    var profileImagePath = currentUser?.ProfileImagePath;

    var pageTitle = ViewData["Title"] as string ?? "Receptionist Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@(ViewData["Title"] ?? "Receptionist Dashboard | Doctor Appointment System")</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Google font (same as admin/doctor) -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Shared admin/doctor layout & card styles -->
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />

    <!-- Receptionist-specific tweaks (grids, spacing, etc.) -->
    <link rel="stylesheet" href="~/css/receptionist-dashboard.css" asp-append-version="true" />
</head>
<body>
    <div class="admin-layout">
        <!-- ===== SIDEBAR ===== -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                @if (!string.IsNullOrEmpty(profileImagePath))
                {
                    <img src="@Url.Content(profileImagePath)" alt="Profile" class="admin-avatar-img" />
                }
                else
                {
                    <div class="admin-avatar">@firstLetter</div>
                }

                <div class="sidebar-role">RECEPTIONIST</div>

                <div class="sidebar-username">
                    @userName
                </div>

                <div class="sidebar-subtitle">
                    Sunshine Hospital
                </div>
            </div>

            <nav class="sidebar-nav">
                <!-- DASHBOARD -->
                <a asp-controller="ReceptionistDashboard"
                   asp-action="Index"
                   class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "ReceptionistDashboard" ? "active" : "")">
                    <div class="nav-link-icon">🏠</div>
                    <span>Dashboard</span>
                </a>

                <!-- NEW BOOKING -->
                <a asp-controller="ReceptionistBooking"
                   asp-action="Index"
                   class="nav-link">
                    <div class="nav-link-icon">➕</div>
                    <span>New Booking</span>
                </a>

                <!-- INSTANT PATIENT REGISTRATION -->
                <a asp-controller="ReceptionistPatient"
                   asp-action="InstantRegistration"
                   class="nav-link">
                    <div class="nav-link-icon">⚡</div>
                    <span>Instant Patient Registration</span>
                </a>

                <!-- PAYMENTS & RECEIPTS -->
                <a asp-controller="ReceptionistPayments"
                   asp-action="Index"
                   class="nav-link">
                    <div class="nav-link-icon">💳</div>
                    <span>Payments &amp; Receipts</span>
                </a>

                <!-- MY PROFILE -->
                <a asp-controller="ReceptionistProfile"
                   asp-action="MyProfile"
                   class="nav-link">
                    <div class="nav-link-icon">👤</div>
                    <span>My Profile</span>
                </a>

                <!-- SETTINGS DROPDOWN (similar to doctor/admin) -->
                <div class="nav-dropdown">
                    <div class="nav-dropdown-toggle" data-dropdown>
                        <div class="nav-dropdown-toggle-main">
                            <div class="nav-link-icon">⚙️</div>
                            <span>Settings</span>
                        </div>
                        <span class="nav-dropdown-arrow">▾</span>
                    </div>

                    <div class="nav-submenu">
                        <a asp-controller="Settings"
                           asp-action="ChangePassword"
                           class="nav-link nav-link--sub">
                            Change Password
                        </a>

                        <a asp-controller="Settings"
                           asp-action="NotificationPreferences"
                           class="nav-link nav-link--sub">
                            Notification Preferences
                        </a>
                    </div>
                </div>

                <!-- LOGOUT -->
                <form asp-area="Identity"
                      asp-page="/Account/Logout"
                      asp-route-returnUrl="~/"
                      method="post"
                      class="sidebar-logout">
                    <button type="submit" class="nav-link nav-link--logout">
                        <div class="nav-link-icon">🚪</div>
                        <span>Logout</span>
                    </button>
                </form>
            </nav>
        </aside>

        <!-- ===== MAIN CONTENT ===== -->
        <main class="main">
            <header class="topbar">
                <div class="topbar-left">
                    <button id="menuToggle" class="menu-toggle" type="button">
                        ☰
                    </button>
                    <div class="topbar-title">@pageTitle</div>
                </div>
                <div class="topbar-right">
                    <div class="topbar-date" id="currentDate"></div>
                </div>
            </header>

            <section class="dashboard-content">
                @RenderBody()
            </section>
        </main>
    </div>

    <!-- Same JS used by admin/doctor: handles current date + sidebar toggles -->
    <script src="~/js/admin-dashboard.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
